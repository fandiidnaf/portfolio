{
  "hosting": {
    "site": "fandi-portofolio",
    "public": "dist",
    "headers": [
      {
        "source": "**/*.pdf",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ],
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "frameworksBackend": {
      "region": "asia-east1"
    },
    "rewrites": [{ "source": "**", "destination": "/index.html" }]
  }
}
